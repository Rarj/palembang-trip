<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_main_features"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_alignWithParentIfMissing="true"
    android:layout_margin="4dp"
    android:clickable="true"
    android:elevation="5dp"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_main_features"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:background="@drawable/hiking" />

        <TextView
            android:id="@+id/tv_count_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#bbf4f4f4"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_destination"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="99+ hotels" />

    </RelativeLayout>

</android.support.v7.widget.CardView>